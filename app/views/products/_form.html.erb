<%= form_with model: product, local: true do |form| %>
  <!-- Product Name -->
  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>

  <!-- Product Description -->
  <div class="mb-3">
    <%= form.label :description, "Description", class: "form-label" %>
    <%= form.rich_text_area :description, class: "form-control", required: true %>
  </div>

  <!-- Product Image -->
  <div class="mb-3">
    <%= form.label :featured_image, "Product Image", class: "form-label", style: "display: block" %>
    <%= form.file_field :featured_image, accept: "image/*", class: "form-control" %>
  </div>

  <!-- Inventory Count -->
  <div class="mb-3">
    <%= form.label :inventory_count, "Inventory Count", class: "form-label", style: "display: block" %>
    <%= form.number_field :inventory_count, class: "form-control", required: true, min: 0 %>
  </div>

  <!-- Submit Button -->
  <div class="text-center">
    <%= form.submit "Create Product", class: "btn btn-primary" %>
  </div>
<% end %>
